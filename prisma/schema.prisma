model User {
  id Int @id @default(autoincrement())
  name String
  list List[]
  email String
  password String
}

model List {
  id Int @id @default(autoincrement())
  title String
  description String
  books BooksOnLists[]
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Book {
  id Int @id @default(autoincrement())
  bookId String
  listId Int
  title String
  author String 
  publisher String
  publishedDate String
  category String
  imageUrl String
  description String
}

model BooksOnLists {
  id Int @id @default(autoincrement())
  bookId String
  listId Int
  list List @relation(fields: [listId], references: [id])
  assignedAt DateTime @default(now())
}