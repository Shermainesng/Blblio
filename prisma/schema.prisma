// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

// local
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  list List[]
  email String
  password String
  avatar String
}

model List {
  id Int @id @default(autoincrement())
  title String
  description String
  books BooksOnLists[]
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Book {
  id Int @id @default(autoincrement())
  bookId String
  listId Int
  title String
  author String 
  publisher String
  publishedDate String
  category String
  imageUrl String
  description String
  reviews Review[]
}

model BooksOnLists {
  id Int @id @default(autoincrement())
  bookId String
  listId Int
  list List @relation(fields: [listId], references: [id])
  assignedAt DateTime @default(now())
}

model Review {
  id Int @id @default(autoincrement())
  book Book @relation(fields:[bookId], references: [id])
  bookId Int
  rating Int
  description String
  assignedAt DateTime @default(now())
}